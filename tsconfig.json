{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "allowUnreachableCode": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "inlineSources": true,
        "noEmit": false,
        "skipLibCheck": true,
        "outDir": "./build",
        "lib": [
            "dom",
            "es2015"
        ],
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "jasmine",
            "node",
            "uglify-js",
            "webpack"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "./compiled"
    },
    "exclude": [
        "node_modules",
        "dist",
        "src/polyfills.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
