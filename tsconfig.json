{
    "compilerOptions": {
        "outDir": "./dist/packages/all",
        "experimentalDecorators": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "target": "es2015",
        "lib": [
            "es5",
            "es2015",
            "dom"
        ],
        "types": ["jasmine"]
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
